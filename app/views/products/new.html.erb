<div class="container">
  <%= form_for @product, :html => {:class => "form-signin"} do |f|%>
    <h2 class="form-signin-heading">New Product</h2>
    <%= f.label :name, "Product Name" , class: "form-control-label"%>
    <%=f.text_field :name, class: "form-control", placeholder: "Enter proudct name"%>

    <%= f.label :url, "Product image URL", class: "form-control-label"%>
    <%=f.text_field :url, class: "form-control", placeholder: "Enter product url"%>

    <%= f.label :description, "Description", class: "form-control-label"%>
    <%=f.text_area :description, class: "form-control", placeholder: "Enter product's description"%>

    <%= f.label :price_in_dollar, "Price", class: "form-control-label"%>
    <div class="input-group">
    <span class="input-group-addon">$</span>
    <%=f.text_field :price_in_dollar, class: "form-control", placeholder: "Enter product's price"%>
    </div>

    <%=f.submit "Submit", class:"btn btn-secondary", id: "new-product"%>
  <% end %>
</div>
